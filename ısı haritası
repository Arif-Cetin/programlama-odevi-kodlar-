import matplotlib.pyplot as plt
import pandas as pd

from google.colab import drive
drive.mount('/content/drive')

data_path = '/content/drive/MyDrive/ısı.xlsx'
df = pd.read_excel(data_path)

df['GÜBRE CİNSİ_numeric'] = pd.factorize(df['GÜBRE CİNSİ'])[0] 

plt.figure(figsize=(15, 8))

plt.hexbin(df['GÜBRE CİNSİ_numeric'], df['A'], gridsize=20, cmap='magma', edgecolors='face')

plt.colorbar(label='Yoğunluk')

plt.xlabel('GÜBRE CİNSİ', fontsize=12, fontweight='bold')
plt.ylabel('A', fontsize=12, fontweight='bold')
plt.title('GÜBRE CİNSİ Verileri Heatmap', fontsize=14, fontweight='bold')

plt.xticks(ticks=df['GÜBRE CİNSİ_numeric'], labels=df['GÜBRE CİNSİ'], rotation=90, fontsize=8)

plt.yticks(fontsize=8)

plt.grid(True, axis='y', linestyle='-', alpha=0.5)

plt.gca().set_facecolor('#d6f9de')

plt.show()
