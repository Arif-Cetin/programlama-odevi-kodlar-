import matplotlib.pyplot as plt
import seaborn as sns
import pandas as pd
from google.colab import drive

drive.mount('/content/drive')

data_path = '/content/drive/MyDrive/2018.xlsx'
df = pd.read_excel(data_path)

plt.figure(figsize=(15, 8))

sns.violinplot(x=df['il'], y=df['Sanat'], inner='quartile', linewidth=1.3, palette='turbo')

plt.xlabel('İl', fontsize=12, fontweight='bold')
plt.ylabel('Sanat', fontsize=12, fontweight='bold')
plt.title('Sanat Verileri - Keman Grafiği', fontsize=14, fontweight='bold')

plt.xticks(rotation=90, fontsize=8)
plt.yticks(fontsize=8)
plt.grid(True, axis='y', linestyle='-', alpha=0.5)

plt.gca().set_facecolor('#d6f9de')
plt.show()
