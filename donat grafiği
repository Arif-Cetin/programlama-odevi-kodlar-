from google.colab import drive
import pandas as pd
import matplotlib.pyplot as plt

drive.mount('/content/drive')

file_path = '/content/drive/My Drive/2018.xlsx'

df = pd.read_excel(file_path)

labels = df['il'].tolist()  
sizes = df['kullanıcı sayısı'].tolist()  

fig, ax = plt.subplots()
ax.pie(sizes, labels=labels, autopct='%1.1f%%', wedgeprops={'width': 0.4})
ax.set(aspect="equal", title='Donut Chart Örneği')
plt.show()
